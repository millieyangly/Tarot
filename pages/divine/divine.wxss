.animation-element-wrapper {
  display: flex;
  width: 100%;
  padding-top: 200rpx;
  padding-bottom: 150rpx;
  height: 1000rpx;
  justify-content: center;
  overflow: hidden;
  background-color: #ffffff;
}   

.card-element {
  width: 200rpx;
  height: 340rpx;
  position:absolute;
  background-color: #000;
}

.animation-buttons {
  padding: 30rpx 50rpx 10rpx;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
}
.animation-button {
  float: left;
  line-height: 2;
  width: 300rpx;
  margin: 15rpx 12rpx;
}

