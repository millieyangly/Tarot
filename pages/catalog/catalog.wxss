/* pages/catalog/catalog.wxss */

.bg {
  background: url() ;
  background-size: cover;
  /* background-color: #000; */
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: -2;
}

.menu {
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

.item {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 120rpx;
  margin-top: 36rpx;
  background-color: rgba(255, 255, 255, 0.7); /* #85888c; 2b2f36;*/
  align-items: center;
  border-radius: 15rpx;
  box-shadow: 5rpx -5rpx 25rpx rgb(56, 56, 56) inset;
}

.img {
  width: 68rpx;
  height: 68rpx;
  margin-left: 26rpx;
}

.text {
  font-size: 32rpx;
  margin-left: 20rpx;
  font-weight: bold;
}

.sub_item {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  margin-top: 10rpx;
  padding-top: 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  box-shadow: 5rpx -5rpx 25rpx rgb(56, 56, 56) inset;
  justify-items: center;
  border-radius: 12rpx;
}

.sub_text {
  height: 60rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  font-weight: light;
  justify-items: center;
  align-items: center;
}

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 525rpx;
  height: 946rpx;
  position: fixed;
  top: 7%;
  margin-left: 15%;
  z-index: 9999;
  background-image: url() ;
  background-size: cover;
  /* background-color: #fff; */
  box-shadow: 8rpx 12rpx 12rpx #000;
  border-radius: 36rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 34rpx;
  color: #fff;
}

.modal-img {
  margin-top: 30rpx;
  width: 500rpx;
  height: 500rpx;
}

.modal-img image {
  width: 100%;
  height: 100%;
}

.modal-text {
  height: 250rpx;
  padding: 50rpx;
}

